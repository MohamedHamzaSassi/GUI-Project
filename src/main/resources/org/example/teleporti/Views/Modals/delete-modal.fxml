<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            stylesheets="@style.css"
            fx:controller="org.example.teleporti.SceneControllers.DeleteModalController">
    <VBox styleClass="tp-card" alignment="CENTER" spacing="20.0" prefWidth="350" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: -tp-primary;" text="Confirmation"/>
        <Label fx:id="label" wrapText="true" textAlignment="CENTER" style="-fx-text-fill: -tp-text-secondary;"/>
        <HBox alignment="CENTER" spacing="15.0">
            <Button styleClass="button-primary" text="Oui" onAction="#onYes" prefWidth="100" style="-fx-background-color: #ef4444;"/>
            <Button styleClass="button-primary" text="Non" onAction="#onNo" prefWidth="100" style="-fx-background-color: #94a3b8;"/>
        </HBox>
    </VBox>
</AnchorPane>
