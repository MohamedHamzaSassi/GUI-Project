<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            stylesheets="@style.css"
            fx:controller="org.example.teleporti.SceneControllers.EditReservationModalController">

    <VBox fx:id="reservationForm" alignment="CENTER" spacing="20.0" styleClass="tp-card" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -tp-primary;" text="Modifier Réservation"/>
        <VBox spacing="15.0">
            <VBox spacing="5">
                <Label text="Trajet" style="-fx-font-weight: bold;"/>
                <MenuButton fx:id="trajetField" text="Sélectionner Trajet" maxWidth="Infinity"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Passager" style="-fx-font-weight: bold;"/>
                <MenuButton fx:id="passagerField" text="Sélectionner Passager" maxWidth="Infinity"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Statut" style="-fx-font-weight: bold;"/>
                <MenuButton fx:id="statusField" text="Sélectionner Statut" maxWidth="Infinity"/>
            </VBox>
        </VBox>
        <HBox alignment="CENTER" spacing="15.0">
            <Button styleClass="button-primary" text="Sauvegarder" onAction="#onSave" prefWidth="150" prefHeight="40"/>
            <Button styleClass="button-primary" text="Annuler" onAction="#onCancel" prefWidth="150" prefHeight="40" style="-fx-background-color: #94a3b8;"/>
        </HBox>
    </VBox>

</AnchorPane>
