<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.teleporti.SceneControllers.ProfileViewController"
            stylesheets="@style.css"
            styleClass="main-container">

    <left>
        <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="sidebar" prefWidth="200.0">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../Images/logo.png"/>
            </ImageView>
            <Region prefHeight="20.0" />
            <Button alignment="CENTER_LEFT" styleClass="button-primary" text="Accueil" onAction="#onGoToHome" maxWidth="Infinity"/>
            <Region VBox.vgrow="ALWAYS" />
            <Button alignment="CENTER" styleClass="button-primary" text="Déconnecter" onAction="#onLogout" maxWidth="Infinity" style="-fx-background-color: #ef4444;"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Label text="Mon Profil" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: -tp-primary;"/>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="welcome" styleClass="welcome"/>
            </HBox>

            <VBox styleClass="tp-card" spacing="20.0" maxWidth="600">
                <Label text="Informations Personnelles" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: -tp-primary;"/>
                
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    
                    <Label text="Nom et Prénom:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: -tp-text-secondary; -fx-font-weight: bold;"/>
                    <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-text-fill: -tp-text-primary;"/>
                    
                    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: -tp-text-secondary; -fx-font-weight: bold;"/>
                    <Label fx:id="emailLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-text-fill: -tp-text-primary;"/>
                    
                    <Label text="Téléphone:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-text-fill: -tp-text-secondary; -fx-font-weight: bold;"/>
                    <Label fx:id="phoneLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-text-fill: -tp-text-primary;"/>
                    
                    <Label text="Adresse:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-text-fill: -tp-text-secondary; -fx-font-weight: bold;"/>
                    <Label fx:id="addressLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-text-fill: -tp-text-primary;"/>
                    
                    <Label text="Ville:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-text-fill: -tp-text-secondary; -fx-font-weight: bold;"/>
                    <Label fx:id="villeLabel" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-text-fill: -tp-text-primary;"/>
                    
                    <Label text="Pays:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-text-fill: -tp-text-secondary; -fx-font-weight: bold;"/>
                    <Label fx:id="paysLabel" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-text-fill: -tp-text-primary;"/>
                </GridPane>
                
                <Separator />
                
                <HBox alignment="CENTER_RIGHT">
                    <Button styleClass="button-primary" text="Modifier le profil" onAction="#openEditModal" prefWidth="200.0"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>