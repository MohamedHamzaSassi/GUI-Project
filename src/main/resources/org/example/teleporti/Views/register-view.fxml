<?xml version="1.0" encoding="UTF-8"?>

<!-- register-view.fxml -->
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="40.0"
      stylesheets="@style.css"
      styleClass="main-container"
      fx:controller="org.example.teleporti.SceneControllers.SignupViewController">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <VBox spacing="15.0" alignment="CENTER">
        <padding>
            <Insets top="40" bottom="0" left="0" right="0"/>
        </padding>
        <Label text="Co-Transport" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: -tp-primary;"/>
        <Label text="Where Every Journey Is Shared." style="-fx-font-size: 18px; -fx-text-fill: -tp-accent;"/>
        <ImageView fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../Images/logo.png"/>
        </ImageView>
    </VBox>

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;" HBox.hgrow="ALWAYS">
        <VBox styleClass="tp-card" spacing="15.0" alignment="CENTER_LEFT" minWidth="450" maxWidth="Infinity">
            <padding>
                <Insets top="40" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Créer un compte" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: -tp-primary;"/>
            
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50" />
                    <ColumnConstraints percentWidth="50" />
                </columnConstraints>
                
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Nom" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="nomText" promptText="Nom"/>
                </VBox>
                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Prénom" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="prenomText" promptText="Prénom"/>
                </VBox>
                
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                    <Label text="Email" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="emailText" promptText="votre@email.com"/>
                </VBox>
                
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                    <Label text="Mot de passe" style="-fx-font-weight: bold;"/>
                    <PasswordField fx:id="passwordText" promptText="••••••••"/>
                </VBox>
                
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <Label text="Âge" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="ageText" promptText="Âge"/>
                </VBox>
                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <Label text="Gouvernorat" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="governeratText" promptText="Gouvernorat"/>
                </VBox>
                
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2">
                    <Label text="Ville" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="villeText" promptText="Ville"/>
                </VBox>
            </GridPane>

            <Label styleClass="error-text" fx:id="errorText" style="-fx-text-fill: #ef4444;"/>
            
            <Button styleClass="button-primary" text="S'inscrire" onAction="#onFormSubmit" maxWidth="Infinity" prefHeight="45"/>
            
            <HBox spacing="5.0" alignment="CENTER">
                <Label text="Déjà un compte ?" style="-fx-text-fill: -tp-text-secondary;"/>
                <Hyperlink text="Connectez-vous" onAction="#goToLogin" style="-fx-text-fill: -tp-accent; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </ScrollPane>
</HBox>